extends layout

block content

  p Welcome to #{title}
  script(src="javascripts/jquery-1.3.2.min.js")
  script(src="javascripts/socket.io.js")
  div(id="magic")
     input(type="text", placeholder="name" ,name="name", id="uname")
     br
     input(type="pass", placeholder="password", name="password", id="password")
     br
     input(type="submit", value="submit", name="submit" ,id="submit")
  script(type='text/javascript').
      $(document).ready(function(){
          var uname,pass;
          $("#submit").click(function(){
              uname=$("#uname").val();
              pass=$("#password").val();
              /*
              * Perform some validation here.
              */
              $.post("http://localhost:8181/users",{uname:uname,pass:pass},function(data){
                if(data==='done')
                {
                 window.location.href="/client";
                }
              });
          });
      });


